{
  "name": "Naad Music Player",
  "short_name": "Naad",
  "description": "A lightweight, offline music player featuring dynamic audio visualization, folder-based library management, and loudness normalization.",
  "id": "./index.html",
  "start_url": "./index.html",
  "display": "standalone",
  "display_override": ["window-controls-overlay", "standalone", "minimal-ui"],
  "background_color": "#F3F4F6",
  "theme_color": "#F3F4F6",
  "orientation": "portrait",
  "categories": ["music", "entertainment", "utilities"],
  "icons": [
    {
      "src": "icon-192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icon-512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "any maskable"
    }
  ],
  "file_handlers": [
    {
      "action": "./index.html",
      "accept": {
        "audio/mpeg": [".mp3"],
        "audio/wav": [".wav"],
        "audio/flac": [".flac"],
        "audio/mp4": [".m4a"]
      }
    }
  ],
  "shortcuts": [
    {
      "name": "Library",
      "short_name": "Library",
      "description": "Browse your music folders",
      "url": "./index.html",
      "icons": [{ "src": "icon-192.png", "sizes": "192x192" }]
    }
  ],
  "screenshots": [
    {
      "src": "screenshot-mobile.png",
      "sizes": "1080x1920",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Now Playing with Visualization"
    },
    {
      "src": "screenshot-desktop.png",
      "sizes": "1920x1080",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Music Library Grid"
    }
  ]
}
